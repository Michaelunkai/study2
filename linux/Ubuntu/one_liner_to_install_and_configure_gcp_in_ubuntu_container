apt update && apt install -y python3-pip python3-venv && python3 -m venv /opt/venv && /opt/venv/bin/pip install pyqt5 && apt-get update -y && apt-get upgrade -y && apt-get install -y apt-transport-https ca-certificates gnupg curl sudo && curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo gpg --dearmor -o /usr/share/keyrings/cloud.google.gpg && echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | sudo tee -a /etc/apt/sources.list.d/google-cloud-sdk.list && apt-get update -y && apt-get install -y google-cloud-sdk && gcloud init
