copy() {
    sudo apt install xclip -y                                                                       # Enable alias expansion in the function                                                        shopt -s expand_aliases                                                                         # Re-run the provided command with alias expansion and pipe to xclip                            eval "$*" | xclip -selection clipboard
    echo "Output of '$*' copied to clipboard."                                                  }





