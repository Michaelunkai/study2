sudo docker run -d --net=kafka-net --name=kafka-connect -p 8083:8083 -e CONNECT_BOOTSTRAP_SERVERS=kafka:7000 -e CONNECT_REST_PORT=8083 -e CONNECT_GROUP_ID="quickstart" -e CONNECT_CONFIG_STORAGE_TOPIC="quickstart-config" -e CONNECT_OFFSET_STORAGE_TOPIC="quickstart-offsets" -e CONNECT_STATUS_STORAGE_TOPIC="quickstart-status" -e CONNECT_KEY_CONVERTER="org.apache.kafka.connect.json.JsonConverter" -e CONNECT_VALUE_CONVERTER="org.apache.kafka.connect.json.JsonConverter" -e CONNECT_INTERNAL_KEY_CONVERTER="org.apache.kafka.connect.json.JsonConverter" -e CONNECT_INTERNAL_VALUE_CONVERTER="org.apache.kafka.connect.json.JsonConverter" confluentinc/cp-kafka-connect:7.3.2
