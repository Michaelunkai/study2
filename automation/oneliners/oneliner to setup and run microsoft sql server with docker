 docker run -e "ACCEPT_EULA=Y" -e "SA_PASSWORD=YourPassword!" -p 1433:1433 --name sql1 -d mcr.microsoft.com/mssql/server && until docker exec -it sql1 /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P YourPassword! -Q "SELECT 1" > /dev/null 2>&1; do echo "Waiting for SQL Server to start..."; sleep 2; done; docker exec -it sql1 /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P YourPassword!
